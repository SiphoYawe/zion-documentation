  "colors": {
    "primary": "#3B82F6",
    "light": "#F8FAFC",
    "dark": "#0F172A"
  },
  "logo": {
    "light": "/images/logo-light.svg",
    "dark": "/images/logo-dark.svg",
    "href": "https://zionapp.co"
  },
  "navbar": {
    "links": [
      {
        "label": "Go to App",
        "href": "https://zionapp.co"
      }
