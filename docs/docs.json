            "group": "Getting Started",
            "pages": ["index", "quickstart", "features"]
          },
          {
            "group": "User Guides",
            "pages": [
              "guides/students",
              "guides/goals",
              "guides/reports",
              "guides/analytics"
            ]
          },
          {
            "group": "Administration",
            "pages": [
              "admin/school-setup",
              "admin/user-management",
              "admin/settings"
